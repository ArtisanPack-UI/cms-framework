{
    "runner.bootstrap": "tests/bootstrap.php",
    "runner.path": [
        "tests/Performance"
    ],
    "runner.php_config": {
        "memory_limit": "2G"
    },
    "core.extensions": [
        "PhpBench\\Extensions\\XDebug\\XDebugExtension"
    ],
    "report.generators": {
        "table": {
            "cols": [
                "benchmark",
                "subject", 
                "groups",
                "params",
                "revs",
                "its",
                "mem_peak",
                "best",
                "mean",
                "mode",
                "worst",
                "stdev",
                "rstdev",
                "diff"
            ]
        },
        "csv": {
            "file": "storage/performance/benchmark_results.csv"
        },
        "html": {
            "file": "storage/performance/benchmark_report.html"
        }
    },
    "storage": {
        "driver": "json",
        "file": "storage/performance/benchmark_history.json"
    }
}